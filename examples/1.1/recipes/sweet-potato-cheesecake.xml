<eatdrinkfeelgood xmlns="http://www.eatdrinkfeelgood.info/1.1/ns" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xi="http://www.w3.org/2001/XInclude">
  <recipe>
    <name>
      <common>Galatoire's Sweet Potato Cheesecake</common>
    </name>
    <source>
      <publication xlink:href = "http://www.nytimes.com/2002/11/20/dining/201YREX.html">
	<name>
	  <common>New York Times</common>
	</name>
	<dc:date>20021120T05:00:00 -0500</dc:date>
      </publication>
    </source>
    <yield>
      <amount>
	<quantity><n type = "int" value = "12" /></quantity>
	<measure>
	  <customunit>servings</customunit>
	</measure>
      </amount>
    </yield>
    <requirements>
      <time>
	<preparation>
	  <minutes><n value = "15" /></minutes>
	</preparation>
	<cooking>
	  <hours><n type = "int" value = "1" /></hours>
	  <minutes><n type = "int" value = "15" /></minutes>
	</cooking>
      </time>
      <ingredients>
	<set>
	 <name>
          <common>The crust</common>
	 </name>
         <xi:include href = "http://www.eatdrinkfeelgood.info/examples/1.1/recipes/graham_cracker_crust.xml#xmlns(e=http://www.eatdrinkfeelgood.info/1.1/ns)xpointer(//e:ing)">
	  <xi:fallback>
	   <extref xlink:href = "http://www.eatdrinkfeelgood.info/examples/1.1/recipes/graham_cracker_crust.xml"
	           xlink:title = "Graham Cracker Crust" />
          </xi:fallback>
	 </xi:include>
	</set>
	<set>
	  <name>
	    <common>The filling</common>
	  </name>
	  <ing>
	    <amount>
	      <quantity><n type = "int" value = "3" /></quantity>
	      <measure>
		<customunit>packages</customunit>
	      </measure>
	      <detail>3 ounces each</detail>
	    </amount>
	    <item>cream cheese</item>
	    <detail>softened</detail>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "int" value = "1" /></quantity>
	      <measure>
		<unit content="cup"/>
	      </measure>
	    </amount>
	    <item>sugar</item>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "frac" value = "1/4" /></quantity>
	      <measure>
		<unit content="cup"/>
	      </measure>
	    </amount>
	    <item>sugar</item>
	    <detail>light brown</detail>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "frac" value = "1 3/8" /></quantity>
	      <measure>
		<unit content="cup"/>
	      </measure>
	    </amount>
	    <item>sweet potatoes</item>
	    <detail>mashed</detail>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "int" value = "2" /></quantity>
	      <measure>
		<customunit>large</customunit>
	      </measure>
	    </amount>
	    <item>eggs</item>
	    <detail>slightly beaten</detail>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "frac" value = "2/3" /></quantity>
	      <measure>
		<unit content="cup"/>
	      </measure>
	    </amount>
	    <item>evaporated milk</item>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "int" value = "2" /></quantity>
	      <measure>
		<unit content="tablespoon"/>
	      </measure>
	    </amount>
	    <item>cornstarch</item>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "frac" value = "1/4" /></quantity>
	      <measure>
		<unit content="teaspoon"/>
	      </measure>
	    </amount>
	    <item>cinnamon</item>
	    <detail>ground</detail>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "frac" value = "1/8" /></quantity>
	      <measure>
		<unit content="teaspoon"/>
	      </measure>
	    </amount>
	    <item>nutmeg</item>
	    <detail>ground</detail>
	  </ing>
	</set>
	<set>
	  <name>
	    <common>The topping</common>
	  </name>
	  <ing>
	    <amount>
	      <quantity><n type = "int" value = "2" /></quantity>
	      <measure>
		<unit content="cup"/>
	      </measure>
	    </amount>
	    <item>sour cream</item>
	    <detail>room temperature</detail>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "frac" value = "1/3" /></quantity>
	      <measure>
		<unit content="cup"/>
	      </measure>
	    </amount>
	    <item>sugar</item>
	  </ing>
	  <ing>
	    <amount>
	      <quantity><n type = "int" value = "1" /></quantity>
	      <measure>
		<unit content="teaspoon"/>
	      </measure>
	    </amount>
	    <item>vanilla extract</item>
	  </ing>
	</set>
      </ingredients>
    </requirements>
    <directions>
      <stage>
	<name>
	 <common>The crust</common>
	</name>
        <xi:include href = "http://www.eatdrinkfeelgood.info/examples/1.1/recipes/graham_cracker_crust.xml#xmlns(e=http://www.eatdrinkfeelgood.info/1.1/ns)xpointer(//e:step)">
	 <xi:fallback>
	  <extref xlink:href = "http://www.eatdrinkfeelgood.info/examples/1.1/recipes/graham_cracker_crust.xml"
	           xlink:title = "Graham Cracker Crust" />
         </xi:fallback>
        </xi:include>   
      </stage>
      <stage>
	<name>
	  <common>The filling</common>
	</name>

	<step>
	  <para>Beat cream cheese with electric mixer until
	  smooth.</para>
	</step>

	<step>
	  <para>Add sugar and brown sugar, beating until smooth.</para>
	</step>

	<step>
	  <para>Add sweet potatoes, eggs, evaporated milk, cornstarch, cinnamon and nutmeg, beating until well combined. Pour into
	  crust.</para>
	</step>

	<step>
	  <para>Bake until edge is set, 55 to 60 minutes.</para>
	</step>
      </stage>
      <stage>
	<name>
	  <common>The topping</common>
	</name>
	<step>
	  <para>Whisk sour cream, sugar and vanilla to combine. Spread
	  over warm cheesecake.</para>
        </step>
        <step>
	 <para>Return to oven, and bake until just set, 5 minutes. Cool on wire rack.</para>
        </step>
	<step>
	  <para>Remove side of pan, and chill for a few hours or overnight.</para>
	</step>
      </stage>
    </directions>
